<Window x:Class="Приложение_Турагенства.UI.Wnd.wndRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Приложение_Турагенства.UI.Wnd"
        xmlns:cmcl="clr-namespace:CustomControls"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Путешествия по России: Создание учетной записи"  Height="auto" Width="800" MinWidth="550" MinHeight="400" Background="#bae3e8"
        Icon="/Приложение_Турагенства;component/Resource/Logo.png" 
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="stcTitle" 
                    Orientation="Vertical" 
                    Grid.Row="0">
                <Image x:Name="imgImageTitle" 
                    HorizontalAlignment="Center" 
                    Width="100" Height="100" 
                    Margin="0,20,0,0" 
                   Source="../../Resource/Logo.png"/>
                <TextBlock Text="Регистрация" FontSize="28" HorizontalAlignment="Center" Margin="0 15 0 15"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center">
                <Border Padding="10" CornerRadius="10" Margin="25 15 25 15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Логин:" Margin="0 0 10 0"/>
                        <cmcl:clPlaceholderTextBox x:Name="pltxbxLogin" Text="{Binding Login}" Grid.Column="1" Grid.Row="0" MinWidth="250" Height="40" Placeholder="Придумайте себе логин..." Radius="10" Margin="4 8 0 8" MaxLength="25" TextChanged="ActivatingSendButton"/>

                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Пароль:" Margin="0 0 10 0"/>
                        <cmcl:clPlaceholderTextBox x:Name="pltxbxPassword" Grid.Column="1" Grid.Row="1" MinWidth="250" Height="40" Placeholder="Придумайте пароль..." Radius="10" Margin="4 8 0 8" MaxLength="25" TextChanged="ActivatingSendButton"/>

                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Повторите пароль:" Margin="0 0 10 0"/>
                        <cmcl:clPlaceholderTextBox x:Name="pltxbxPasswordAgain" Grid.Column="1" Grid.Row="2" MinWidth="250" Height="40" Placeholder="Повторно введите пароль..." Radius="10" Margin="4 8 0 8" MaxLength="25" TextChanged="ActivatingSendButton"/>

                        <TextBlock Grid.Column="0" Grid.Row="3" Text="Номер телефона:" Margin="0 0 10 0"/>
                        <cmcl:clPlaceholderTextBox x:Name="pltxbxPhone" Text="{Binding Phone}" Grid.Column="1" Grid.Row="3" Height="40" Placeholder="Введите номер телефона..." Radius="10" Margin="4 8 0 8" TextChanged="ActivatingSendButton"/>

                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Имя пользователя:" Margin="0 0 10 0"/>
                        <cmcl:clPlaceholderTextBox x:Name="pltxbxUserName" Text="{Binding UserName}" Grid.Column="1" Grid.Row="4" Height="40" Placeholder="Придуайте имя, по которому к вам можно будет обращаться..." Radius="10" Margin="4 8 0 8" MaxLength="30" TextChanged="ActivatingSendButton"/>
                    </Grid>
                </Border>
                <Expander Header="Дополнительно" IsExpanded="False" Height="auto" Margin="25 15 25 15">
                    <Border Padding="15" CornerRadius="10" Margin="0 10 0 10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Фамилия:" Margin="0 0 10 0"/>
                            <cmcl:clPlaceholderTextBox x:Name="pltxbxSurname" Text="{Binding Surname}" Grid.Column="1" Grid.Row="0" Height="40" Placeholder="Введите фамилию..." Radius="10" Margin="4 8 0 8" MaxLength="30"/>

                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Имя:" Margin="0 0 10 0"/>
                            <cmcl:clPlaceholderTextBox x:Name="pltxbxName" Text="{Binding Name}" Grid.Column="1" Grid.Row="1" Height="40" Placeholder="Введите имя.." Radius="10" Margin="4 8 0 8" MaxLength="30"/>

                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Отчество:" Margin="0 0 10 0"/>
                            <cmcl:clPlaceholderTextBox x:Name="pltxbxPatronymic" Text="{Binding Patronymic}" Grid.Column="1" Grid.Row="2" Height="40" Placeholder="Введите отчетсво..." Radius="10" Margin="4 8 0 8" MaxLength="30"/>

                            <TextBlock Grid.Column="0" Grid.Row="3" Text=" Эл.почта:" Margin="0 0 10 0"/>
                            <cmcl:clPlaceholderTextBox x:Name="pltxbxEmail" Text="{Binding Email}" Grid.Column="1" Grid.Row="3" MinWidth="250" Height="40" Placeholder="Введите адрес эл.почты..." Radius="10" Margin="4 8 0 8" MaxLength="40"/>


                        </Grid>
                    </Border>
                </Expander>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnBack" Content="Назад" Width="150" Height="40" Margin="0 10 100 10" Style="{StaticResource ButtonBasicNoSize}" Click="btnBack_Click" MouseLeave="Button_MouseLeave" MouseEnter="Button_MouseEnter"/>
                <Button x:Name="btnLogInUser" Content="Войти" Width="150" Height="40" IsEnabled="False" Style="{StaticResource ButtonNoSizeIsNotEnabled}" Click="btnLogInUser_Click" MouseLeave="Button_MouseLeave" MouseEnter="Button_MouseEnter"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>

    <Window.Resources>
        <Style TargetType="Expander">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Comic Sans MS"/>
                <Setter Property="FontSize" Value="16"/>
            </Style.Setters>
        </Style>
        <Style TargetType="Border">
            <Style.Setters>
                <Setter Property="BorderBrush" Value="#445c93"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Comic Sans MS"/>
                <Setter Property="FontSize" Value="18"/>
            </Style.Setters>
        </Style>
    </Window.Resources>
</Window>
