<Window x:Class="Приложение_Турагенства.UI.Wnd.wndTours"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Приложение_Турагенства.UI.Wnd"
        mc:Ignorable="d"
        Title="Путешествия по России: Туры" 
        Height="750" 
        Width="800" 
        Icon="/Приложение_Турагенства;component/Resource/Logo.png" 
        MinWidth="650" 
        MinHeight="750" 
        Activated="Window_Activated" Closing="OnWindowClosing" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="489*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="1" Width="230" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Name="lblActivityUser" Grid.Row="0" Content="Активный пользователь:" Visibility="Hidden" Margin="5 0 0 0" Style="{StaticResource LabalSmall}" FontSize="14"/>
                <Label Name="lblUserName" Grid.Row="1" Content="" Visibility="Hidden" Margin="5 0 0 0" Style="{StaticResource LabalSmall}"/>
                <Label Name="lblUserRole" Grid.Row="2" Content="" Visibility="Hidden" Margin="5 -5 0 0" Style="{StaticResource LabalSmall}"/>
            </Grid>
            
            

            <Image Name="imgLogo" 
                   Grid.Column="0" 
                   Source="../../Resource/Logo.png" 
                   HorizontalAlignment="Left" />
            <TextBlock Name="txtblTitle" 
                       Grid.ColumnSpan="3"  
                       Text="Турагенство" 
                       FontSize="30" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="45 0 0 0"/>
            <Button x:Name="btnAuthorization" 
                    Grid.Column="2" 
                    Margin="15 25 25 15" 
                    Content="Войти в учетную запись" 
                    Style="{StaticResource ButtonBasicNoSize}" 
                    Click="Button_Click" 
                    MouseEnter="Button_MouseEnter" 
                    MouseLeave="Button_MouseLeave" />
        </Grid>
        
        <Grid Grid.Row="0" 
              Background="#bae3e8" 
              Panel.ZIndex="-1000">
        </Grid>

        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden">
        </Frame>
        <Grid Grid.Row="2" 
              Background="#445c93">
        </Grid>
    </Grid>
</Window>
